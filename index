  <script>
    function calculateResult() {
      const form = document.forms["quizForm"];
      const answers = [form.q1.value, form.q2.value, form.q3.value, form.q4.value, form.q5.value];
      const counts = { A: 0, B: 0, C: 0, D: 0, E: 0 };
      answers.forEach(a => counts[a]++);

      const max = Math.max(...Object.values(counts));
      const result = Object.keys(counts).find(key => counts[key] === max);

      document.querySelectorAll('.result').forEach(r => r.style.display = 'none');

      switch(result) {
        case 'A':
          document.getElementById('resultFlash').style.display = 'block';
          break;
        case 'B':
          document.getElementById('resultFade').style.display = 'block';
          break;
        case 'C':
          document.getElementById('resultSwivel').style.display = 'block';
          break;
        case 'D':
          document.getElementById('resultCurtains').style.display = 'block';
          break;
        case 'E':
          document.getElementById('resultPush').style.display = 'block';
          break;
      }
    }
  </script>
